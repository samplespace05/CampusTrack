            </a>
            <ul>
                <% if (user) { %>
                    <li><a href="/home">Home</a></li>
                    <li><a href="/items">Browse Items</a></li>
                    <% if (user.role === 'admin') { %>
                        <li><a href="/admin">Admin</a></li>
                    <% } %>
                    <li><a href="/logout">Logout (<%= user.name %>)</a></li>
                <% } else { %>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/register">Register</a></li>
                <% } %>
            </ul>
        </nav>
